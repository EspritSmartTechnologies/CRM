@model Domain.Entities.Agents

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Agents</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdAgent)

    <div class="form-group">
        @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PointOfProspection, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @{ IEnumerable<Domain.Entities.PointOfProspection> ps = ViewBag.points; }
            @Html.DropDownListFor(Model => Model.IdPointOfProdpection, ps.Select(p => new SelectListItem { Value = p.IdPointOfProspection.ToString(), Text = p.name }))
            @*@Html.EditorFor(model => model.PointOfProspection, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
