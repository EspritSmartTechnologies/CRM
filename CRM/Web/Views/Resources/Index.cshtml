@model IEnumerable<Domain.Entities.Resources>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:mediumspringgreen"><center>Resources</center></h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdResource }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdResource }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdResource })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
